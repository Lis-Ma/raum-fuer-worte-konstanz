ader .main-nav li.active a{color:#ed9323;font-weight:600;border-bottom:2px solid #ed9323;padding-bottom:2px}@media(max-width:768px){.site-header .main-nav{display:none;position:absolute;top:100%;left:0;right:0;background:#f5f5f5;flex-direction:column;align-items:center;padding:1.5rem 0;z-index:1000}.site-header .main-nav ul{flex-direction:column;gap:1.5rem;margin:0;padding:0;list-style:none;align-items:center}.site-header .main-nav.active{display:flex}}.main-wrapper{margin-top:-7rem;background:#f5f5f5;max-width:100%;padding:0}.hero-header{width:100%;height:100vh;background-size:cover;background-position:50%;background-color:#788d7a;display:flex;align-items:center;justify-content:center;scroll-behavior:smooth}.hero-header::after{content:"";position:absolute;inset:0;background:linear-gradient(rgba(0,0,0,.45),rgba(0,0,0,.25));z-index:1}.hero-header .hero-inner{position:relative;z-index:2;color:#fff;text-align:center;padding:0 1rem}@keyframes softFade{0%,35%,100%{opacity:0;transform:translateY(-1px)}10%,25%{opacity:1;transform:translateY(0)}}section{padding:2rem 1rem}.content-section{max-width:760px;padding:4rem 1rem;margin:0 auto}@media(max-width:768px){.content-section{padding:2rem 1rem}}.offerings{display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:2rem}.offerings .offer-card{background:#f5f5f5;padding:2rem;border-radius:14px;box-shadow:0 4px 12px rgba(0,0,0,8%);transition:transform .3s ease,box-shadow .3s ease}.offerings .offer-card:hover{transform:translateY(-4px);box-shadow:0 6px 18px rgba(0,0,0,.12)}.offerings .offer-card h3{margin-top:0}.offerings .offer-card p{margin-bottom:0}.blog-list{list-style:none;padding:0}.blog-list li{margin-bottom:1.5rem}.blog-date{font-size:.85rem;color:#555;margin-left:.5rem}.blog-tags{font-size:.85rem;color:#888;margin-left:.5rem}.contact-methods a{color:#788d7a;text-decoration:underline}.contact-methods p{margin-bottom:1rem;font-size:1.1rem}.site-footer{background:#788d7a;color:#f5f5f5;text-align:center;paddin